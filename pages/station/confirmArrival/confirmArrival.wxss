/* pages/station/confirmArrival/confirmArrival.wxss */

.container {
  padding: 0;
  height: 100%;
}

.bg {
  width: 100%;
  height: 100%;
  display: flex;
  flex: 1;
  position: absolute;
  z-index: -99;
}

.head {
  width: 650rpx;
  margin: 200rpx auto;
  background-color: #fff;
  border-radius: 20rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  opacity: 0.8;
  padding: 30rpx;
  font-size: 40rpx;
}

.title {
  margin: 30rpx;
  color: rgb(163, 163, 163);
}

.address {
  color: rgb(245, 161, 0);
  margin: 30rpx;
}

button {
  width: 650rpx;
  border-radius: 10rpx;
  font-size: 35rpx;
}

.sure {
  background-color: rgb(245, 161, 0);
  color: #fff;
  margin-bottom: 80rpx;
}

.cancel {
  color: rgb(245, 161, 0);
  background-color: #eee;
}

.notFind{
  color: blue;
  font-size: 20rpx;
  float: right;
  margin: -120rpx 30rpx 0 0;
  text-decoration: underline
}
