
.container {
  height: 100%;
  padding-bottom: 0;
  background-color: #f4f4f4;
}

.content {
  display: flex;
  flex-direction: column;
  margin: 20rpx 3% 5rpx;
  border: 2px solid #f4f4f4;
  padding: 10rpx 10rpx;
  background-color: #fefefe;
}

.head {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  margin: 10rpx 20rpx;
  justify-content: space-between;
}

.name {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.job {
  font-size: 30rpx;
  color: gray;
}

.head .message view {
  margin: 5rpx 0;
}

.img {
  margin: 5rpx 35rpx;
}

.img image {
  width: 100rpx;
  height: 100rpx;
}

.phoneView {
  display: flex;
  justify-content: space-between;
  padding-top: 10rpx;
  min-height: 60rpx;
}

.callNum {
  color: dodgerblue;
  font-size: 50rpx;
}

.body {
  display: flex;
  flex-direction: column;
  padding: 0 5rpx;
  margin: 10rpx 20rpx;
}

.bodyView {
  margin: 0 0 5rpx 0;
  display: flex;
  align-items: center;
  min-height: 50rpx;
}

.bodyName {
  font-size: 30rpx;
  color: #666;
  width: 100rpx;
  /*text-align: right*/
}

.bodyContent {
  font-size: 35rpx;
}

.phone image {
  width: 50rpx;
  height: 50rpx;
}

.elseMessage {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 10rpx;
  min-height: 60rpx;
}

.elseMessage .qq {
  width: 45%;
}

.info {
  min-height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 35rpx;
  margin: 0 3% 20rpx;
  background-color: #fefefe;
  /*display: flex;*//*flex-direction: column;*/
}

.infoMessage {
  color: rgb(163, 163, 163);
}

.noManage{
  text-align: center;
  margin: 30rpx 0;
}