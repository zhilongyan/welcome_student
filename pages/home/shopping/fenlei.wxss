.shoppingContent {
  height: 100%;
  box-sizing: border-box;
  background-color: #f4f4f4;
}

.aside {
  width: 4rem;
  border-right: 1px solid #ddd;
  font-size: 0.85rem;
}

.type-nav {
  position: relative;
  padding: 0.7rem 0.3rem;
  text-align: center;
  border-bottom: 1px solid #ddd;
  z-index: 10;
}

.type-nav.selected {
  margin-right: -1px;
  padding-left: -1px;
  color: #333;
  background-color: #fff;
}

.content {
  background-color: #fff;
}

.dish {
  margin-left: 1rem;
  padding: 1rem;
  border-bottom: 1px solid #ddd;
}

.dish .title {
  display: block;
  font-size: 1rem;
}

.dish p {
  color: orange;
  font-size: 0.75rem;
}

.dish .add-btn {
  width: 3rem;
  text-align: right;
}

.cart {
  display: block;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 1rem;
  background: #ddd;
}

.container{
  text-align: center;
  margin: 300rpx 0 
}