/**index.wxss**/

page {
  background-color: rgb(247, 247, 247);
  letter-spacing: 0rpx;
  font-family: "微软雅黑";
  color: gray;
}

.container {
  padding-bottom: 20rpx;
}

.head {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
  flex-grow: nowrap;
  margin: 30rpx auto;
  font-size: 50rpx;
  border-top: 1rpx solid rgb(245, 161, 0);
  border-bottom: 1rpx solid rgb(245, 161, 0);
  padding: 20rpx 0;
  flex: 1;
  width: 410rpx;
}

.headImage {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.head image {
  width: 50rpx;
  height: 50rpx;
}

.head text {
  white-space: nowrap;
}

.body {
  display: flex;
  flex-direction: column;
}

.content {
  display: flex;
  flex-direction: column;
  margin: 20rpx auto;
  width: 700rpx;
}

.title {
  background-color: #39f;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  text-align: center;
  margin: 10rpx 0;
  color: #fff;
  font-size: 30rpx;
}

.content:nth-child(1) .title {
  width: 120rpx;
}

.content:nth-child(2) .title {
  width: 100rpx;
}

.content:nth-child(3) .title {
  width: 300rpx;
}

.content .message {
  margin: 10rpx auto;
  /*width: 720rpx;*/
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
}

span {
  font-weight: bold;
}

.message view {
  margin: 10rpx 0;
}
