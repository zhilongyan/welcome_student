/* pages/home/hotel/hotelMessage.wxss */

.container {
  height: 100%;
  padding: 0;
  background-color: #eee;
}

.head {
  height: 400rpx;
}

.head image {
  height: 400rpx;
  width: 100%;
  opacity: 0.8;
  z-index: -1;
}

.head .name {
  position: relative;
  bottom: 100rpx;
  color: #fff;
  font-size: 40rpx;
  left: 30rpx;
  display: flex;
  justify-content: space-between;
  width: 690rpx;
}

.head .more {
  font-size: 30rpx;
  letter-spacing: 5rpx;
}

.body {
  margin: 20rpx 0;
  display: flex;
  flex-direction: column;
}

.body .message {
  background: #fff;
  margin-bottom: 30rpx;
}

.body .title {
  font-size: 30rpx;
  border-bottom: 1rpx solid #ccc;
  height: 80rpx;
  display: flex;
  align-items: center;
  color: rgb(163, 163, 163);
}

.body .message .content {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 30rpx;
}

.contentMessage{
  display: flex;
  flex-direction: column;
  width: 610rpx;
}
.name {
  color: #000;
  font-size: 35rpx;
  margin: 20rpx 0;
}

.address {
  color: rgb(163, 163, 163);
  font-size: 30rpx;
  margin: 10rpx 0;
}

.phone {
  width: 80rpx;
  height: 50rpx;
  border-left: 1rpx solid #ccc;
  text-align: end;
  z-index: 99
}

.phone image {
  width: 50rpx;
  height: 50rpx;
  z-index: -1
}

.title text {
  margin-left: 30rpx;
}

.info {
  background-color: #fff;
  margin-bottom: 30rpx;
}

.info .content {
  margin: 20rpx 30rpx;
  font-size: 30rpx;
  line-height: 50rpx
}

.care {
  background-color: #fff;
}

.care .content {
  margin: 20rpx 30rpx;
  font-size: 30rpx;
   line-height: 50rpx
}

.initial {
  display: flex;
  justify-content: center;
  align-content: center;
  flex: 1;
  height: 100%;
}

.initial text {
  display: flex;
  justify-content: center;
  align-items: center;
}
